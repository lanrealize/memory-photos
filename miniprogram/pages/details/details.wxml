<!--pages/details/details.wxml-->
<view style="display: flex; flex-direction: column; height: 100vh;">
  <navigation page="details"></navigation>
  <scroll-view class="scrollarea" scroll-y type="list" style="flex: 1; height: 0;">
    <view style="height: {{6 + 1.5}}vh; width: 100vw;"></view>
    <view class="general-container" wx:for="{{albumPhotos}}" wx:for-item="photo" wx:key="key" wx:for-index="index">
      <photo title="{{photo.title}}" subTitle="{{photo.subTitle}}" imageUrl="{{photo.imageUrl}}" description="{{photo.description}}"></photo>
      <photo type="end" title="旅行的起点"></photo>
    </view>
  </scroll-view>
  <view style="position: relative; bottom: 0;">
    <bottom-menu></bottom-menu>
  </view>
</view>
<top-menu></top-menu>