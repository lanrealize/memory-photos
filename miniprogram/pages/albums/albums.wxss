/* pages/albums/albums.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: rgb(245, 245, 245);
}

.albums-photo-creation {
  border-radius: 2vh;
  position: fixed;
  transition: top 0.8s cubic-bezier(.2, 1, 0, 1);
}

.albums-loading {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.albums-loading-text {
  margin-left: auto; 
  margin-right: auto; 
  margin-top: 30vh;
  color: rgb(160, 160, 160);
}

.sk-three-bounce {
  width: 100vw;
  display: flex;
  flex-direction: row;
}

.sk-three-bounce .sk-child {
  width: 2vw;
  height: 2vw;
  background-color: rgb(160, 160, 160);
  border-radius: 100%;
  display: inline-block;
  animation: sk-three-bounce 1.4s ease-in-out 0s infinite both;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 0.4vw;
  margin-right: 0.4vw;
}

.sk-three-bounce .sk-bounce1 {
  animation-delay: -0.32s;
}

.sk-three-bounce .sk-bounce2 {
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-three-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }

  40% {
    transform: scale(1);
  }
}

@keyframes sk-three-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }

  40% {
    transform: scale(1);
  }
}
