/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.general-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.image-container {
  position: relative;
  width: 300px; /* 设置容器的宽度 */
  height: 200px; /* 设置容器的高度 */
  overflow: hidden;
}

.placeholder {
  width: 100%;
  height: 100%;
  background-color: #ccc; /* 灰色的占位符颜色 */
}

.loading-line {
  position: absolute;
  top: 0;
  left: -100%; /* 初始位置在容器的左侧之外 */
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, transparent, rgba(160, 160, 160, 1), transparent); /* 光线效果，从透明到白色再到透明 */
  animation: loadingAnimation 2s linear infinite; /* 设置动画效果，2秒一次无限循环 */
}

@keyframes loadingAnimation {
  0% {
    left: -100%;
  }
  100% {
    left: 100%; /* 在动画结束时，光线移动到容器的右侧之外 */
  }
}