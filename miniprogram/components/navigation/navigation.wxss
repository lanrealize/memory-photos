/* components/navigation/navigation.wxss */
.navigation-root {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.navigation-seperate-line {
  width: 5vw;
  height: 0.4vw;
  background-color: black;
  border-radius: 2px;
}

.navigation-subtitle {
  font-size: 25rpx;
  color: #808080;
  margin-bottom: 2vw;
}

.loading-icon {
  position: absolute;
  left: 10px; /* 调整 loading 图标距离按钮左边的距离 */
  top: 50%;
  width: 20px; /* 调整 loading 图标的大小 */
  height: 20px;
  background-color: transparent;
  border: 4px solid #000000;
  border-top: 4px solid #ccc;
  border-radius: 50%;
  animation: spin 1s linear infinite; /* 添加旋转动画 */
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}