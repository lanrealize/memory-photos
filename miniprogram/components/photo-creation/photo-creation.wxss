/* components/photo-creation/photo-creation.wxss */
.photo-creation-root {
  height: 100vh;
  width: 100vw;
  background-color: rgb(255, 255, 255);
  position: fixed;
}

.photo-creation-cancel {
  padding-left: 5vw;
  font-size: 36rpx;
}

.photo-creation-description {
  color: #A6A6A6;
  padding-left: 8vw;
  padding-right: 8vw;
  padding-top: 5vh;
  font-size: 36rpx;
}

.photo-creation-description-action {
  padding-left: 8vw;
  padding-right: 8vw;
  display: flex;
  flex-direction: row;
}

.photo-creation-description-action-item {
  width: 7.6vw;
  height: 7.6vw;
  padding-left: 3.8vw;
}

.photo-creation-image {
  padding-left: 8vw;
  padding-top: 5.8vh;
  height: 30vh;
  width: 30vh;
}

.photo-creation-time-picker {
  margin-top: 2vh;
}