/* components/photo-creation/photo-creation.wxss */
.photo-creation-root {
  height: 100vh;
  width: 100vw;
  background-color: rgb(255, 255, 255);
  position: fixed;
}

.photo-creation-title {
  padding-left: 5vw;
  font-size: 36rpx;
  display: flex;
  flex-direction: row;
}

.photo-creation-submit {
  width: 15vw;
  background-color: #000000;
  border-radius: 3px;
  color: white;
  margin-right: auto;
  margin-left: 5vw;
}

.photo-creation-cancel {
  border-radius: 3px;
  /* border: solid 1px black; */
}

.photo-creation-actions {
  padding-left: 8vw;
  padding-right: 8vw;
  display: flex;
  flex-direction: row;
  margin-top: 2vh;
}

.photo-creation-description {
  color: #A6A6A6;
  padding-left: 8vw;
  padding-right: 8vw;
  padding-top: 3vh;
  font-size: 36rpx;
}

.photo-creation-description-action {
  padding-left: 8vw;
  padding-right: 8vw;
  display: flex;
  flex-direction: row;
}

.photo-creation-description-action-item {
  width: 7.6vw;
  height: 7.6vw;
  padding-left: 3.8vw;
}

.photo-creation-image {
  padding-left: 8vw;
  padding-top: 4.5vh;
  height: 30vh;
  width: 30vh;
}

.photo-creation-time-picker {
  margin-top: 6vh;
}

.photo-creation-location {
  padding-top: 2.5vh;
  padding-left: 8vw;
  padding-right: 8vw;
  display: grid;
  grid-template-columns: 6vw 5vw 73vw;
  grid-template-areas: "location-icon . location-text";
}

.photo-creation-location-icon {
  width: 6vw;
  height: 6vw;
  grid-area: location-icon;
}

.photo-creation-location-text {
  grid-area: location-text;
}

.photo-creation-copyright {
  padding-left: 8vw;
  padding-right: 25vw;
  padding-top: 4vh;
  font-size: 22rpx;
}

.photo-creation-bottom-submit {
  margin-left: 8vw;
  margin-right: 47vw;
  width: 45vw;
  height: 5vh;
  background-color: black;
  border-radius: 5px;

  position: relative;
  top: 7vh;

  display: flex;
}